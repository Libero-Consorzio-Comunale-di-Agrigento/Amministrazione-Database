<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="201909251348" author="snegroni">
        <comment>Creazione job per pulizia eventi</comment>
            <sql dbms="oracle"
                 endDelimiter="\"
                 splitStatements="true"
                 stripComments="true">
                    DECLARE
                    x        number;
                    d_esiste number(1);
                    BEGIN
                    select nvl(min(1),0)
                    into d_esiste
                    from user_jobs
                    where instr(lower(what),'elimina_log') > 0
                    ;
                    if d_esiste = 0 then
                    dbms_job.submit
                    ( job       => x
                    , what      => 'begin elimina_log(30); end;'
                    , next_date => trunc(SYSDATE + 1) + 1/24
                    , interval  => 'SYSDATE + 1'
                    , no_parse  => TRUE
                    );
                    commit;
                    end if;
                    END;
                    /
            </sql>
    </changeSet>
</databaseChangeLog>